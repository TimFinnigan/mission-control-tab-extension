{
    "manifest_version": 3,
    "name": "Tab Breakout",
    "version": "1.1",
    "description": "Press CMD + Shift + U to break out all open tabs into smaller windows.",
    "permissions": [
        "tabs"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_icon": {
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "commands": {
        "show_tab_breakout": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "MacCtrl+Shift+U"
            },
            "description": "Break out tabs into smaller windows"
        },
        "merge_windows": {
            "suggested_key": {
                "default": "Ctrl+Shift+M",
                "mac": "MacCtrl+Shift+M"
            },
            "description": "Merge all windows into the active window"
        }
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}